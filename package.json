{
  "name": "corpusai",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "turbo dev dev:studio",
    "build": "turbo build",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "clean": "turbo clean && rm -rf node_modules",
    "db:studio": "pnpm --filter @corpusai/database db:studio",
    "db:generate": "pnpm --filter @corpusai/database db:generate",
    "db:push": "pnpm --filter @corpusai/database db:push",
    "db:migrate": "pnpm --filter @corpusai/database db:migrate"
  },
  "devDependencies": {
    "prettier": "^3.4.2",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
